{
    "name": "visual-trial",
    "displayName": "visual-trial",
    "description": "Visual Studio Code integration for the Trial test runner.",
    "version": "0.0.1",
    "publisher": "gedaiu",
    "engines": {
        "vscode": "^1.15.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:trialTests"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "trialTests",
                    "name": "Tests"
                }
            ]
        },
        "commands": [
            {
                "command": "goToTestSource",
                "title": "Go to the test source"
            },
            {
                "command": "runTest",
                "title": "Run the selected test"
            },
            {
                "command": "refreshEntry",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            }
        ],
        "menus": {
            "view/item/context": [
                {
                    "command": "refreshEntry",
                    "when": "viewItem == trialRoot"
                },
                {
                    "command": "runTest",
                    "when": "viewItem == trialTestCase"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32",
        "should": "^12.0.0"
    },
    "dependencies": {
    }
}
